<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            x:Class="CodexGui.Apps.CodexGui.MessageOverlay"
            IsVisible="False"
            IsHitTestVisible="False"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
    <Grid Background="#B3000000">
        <Border Width="380"
                MaxHeight="420"
                Padding="24"
                Background="#1E1E1E"
                CornerRadius="12"
                BorderThickness="1"
                BorderBrush="#2B2B2B"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Spacing="16">
                <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <Border x:Name="iconContainer"
                            Width="44"
                            Height="44"
                            CornerRadius="22"
                            Background="#214329"
                            VerticalAlignment="Center">
                        <TextBlock x:Name="iconText"
                                   Text="â„¹"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="24"
                                   Foreground="#42D77D"
                                   FontWeight="Bold"/>
                    </Border>

                    <TextBlock x:Name="headerText"
                               Text="Message"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#FFFFFF"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <ScrollViewer MaxHeight="260" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="messageText"
                               Foreground="#D9D9D9"
                               TextWrapping="Wrap"/>
                </ScrollViewer>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="12">
                    <Button Content="Copy"
                            Width="120"
                            Click="OnCopyMessage"
                            Background="#2B2B2B"
                            Foreground="#FFFFFF"
                            Padding="8"
                            FontWeight="SemiBold"/>

                    <Button Content="OK"
                            Width="120"
                            Click="OnClose"
                            Background="#42D77D"
                            Foreground="#0D1F16"
                            Padding="8"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
