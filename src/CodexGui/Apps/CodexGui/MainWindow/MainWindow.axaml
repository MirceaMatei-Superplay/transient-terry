<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CodexGui.Apps.CodexGui"
        x:Class="CodexGui.Apps.CodexGui.MainWindow"
        Title="Transient Terry"
        Width="800"
        Height="700"
        MinWidth="600"
        MinHeight="500">
    <Grid RowDefinitions="3*,Auto,2*">
        <TabControl x:Name="tabControl" Grid.Row="0">
            <TabItem Header="Remote Setup">
                <ScrollViewer>
                    <StackPanel Margin="24" Spacing="24">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Remote repository automation"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Fill in the repository and Unity details to run the guided setup."
                                       Foreground="#BBBBBB"/>
                        </StackPanel>

                        <Border Padding="24"
                                Background="#1F1F1F"
                                BorderBrush="#323232"
                                BorderThickness="1"
                                CornerRadius="8">
                            <StackPanel Spacing="24">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Repositories"
                                               FontSize="16"
                                               FontWeight="SemiBold"/>
                                    <Grid ColumnDefinitions="*,*"
                                          RowDefinitions="Auto,Auto">
                                        <StackPanel Grid.Row="0"
                                                    Grid.Column="0"
                                                    Spacing="6"
                                                    Margin="0,0,12,0">
                                            <TextBlock Text="Source Repo URL"
                                                       Foreground="#DADADA"/>
                                            <TextBox x:Name="setupSourceRepoUrlBox"
                                                     MinWidth="260"
                                                     HorizontalAlignment="Stretch"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="0"
                                                    Grid.Column="1"
                                                    Spacing="6"
                                                    Margin="12,0,0,0">
                                            <TextBlock Text="Target Repo URL"
                                                       Foreground="#DADADA"/>
                                            <TextBox x:Name="setupTargetRepoUrlBox"
                                                     MinWidth="260"
                                                     HorizontalAlignment="Stretch"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1"
                                                    Grid.Column="0"
                                                    Spacing="6"
                                                    Margin="0,0,12,0">
                                            <TextBlock Text="Setup Source Branch"
                                                       Foreground="#DADADA"/>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <ComboBox x:Name="setupSourceBox"
                                                          Grid.Column="0"
                                                          MinWidth="220"
                                                          HorizontalAlignment="Stretch"/>
                                                <Button x:Name="refreshSetupSourceButton"
                                                        Grid.Column="1"
                                                        Margin="12,0,0,0"
                                                        Padding="16,6"
                                                        Content="Refresh"/>
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1"
                                                    Grid.Column="1"
                                                    Spacing="6"
                                                    Margin="12,0,0,0">
                                            <TextBlock Text="Setup Target Branch"
                                                       Foreground="#DADADA"/>
                                            <TextBox x:Name="setupTargetBox"
                                                     MinWidth="220"
                                                     HorizontalAlignment="Stretch"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <Separator Background="#2B2B2B"/>

                                <StackPanel Spacing="12">
                                    <TextBlock Text="Unity"
                                               FontSize="16"
                                               FontWeight="SemiBold"/>
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="Unity Path"
                                                   Foreground="#DADADA"/>
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBox x:Name="unityPathBox"
                                                     Grid.Column="0"
                                                     MinWidth="320"
                                                     HorizontalAlignment="Stretch"/>
                                            <Button Grid.Column="1"
                                                    Margin="12,0,0,0"
                                                    Padding="16,6"
                                                    Content="Browse..."
                                                    Click="OnBrowseUnity"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>

                                <Separator Background="#2B2B2B"/>

                                <StackPanel Spacing="12">
                                    <TextBlock Text="Credentials"
                                               FontSize="16"
                                               FontWeight="SemiBold"/>
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="GH_PAT"
                                                   Foreground="#DADADA"/>
                                        <TextBox x:Name="setupPatBox"
                                                 MinWidth="240"
                                                 HorizontalAlignment="Stretch"
                                                 PasswordChar="*"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Spacing="12">
                                    <Button x:Name="openSetupFolderButton"
                                            Padding="24,8"
                                            MinWidth="180"
                                            Content="Open Setup Folder"/>
                                    <Button x:Name="deleteSetupCacheButton"
                                            Padding="24,8"
                                            MinWidth="220"
                                            Content="Delete Cached Repository"/>
                                    <Button x:Name="runSetupButton"
                                            Padding="24,8"
                                            MinWidth="180"
                                            Content="Run Full Setup"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Export">
                <ScrollViewer>
                    <StackPanel Margin="24" Spacing="24">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Submodule export"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Configure the repositories and branches to export your submodules."
                                       Foreground="#BBBBBB"/>
                        </StackPanel>

                        <Border Padding="24"
                                Background="#1F1F1F"
                                BorderBrush="#323232"
                                BorderThickness="1"
                                CornerRadius="8">
                            <StackPanel Spacing="24">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="Repositories"
                                               FontSize="16"
                                               FontWeight="SemiBold"/>
                                    <Grid ColumnDefinitions="*,*"
                                          RowDefinitions="Auto,Auto">
                                        <StackPanel Grid.Row="0"
                                                    Grid.Column="0"
                                                    Spacing="6"
                                                    Margin="0,0,12,0">
                                            <TextBlock Text="Source Repo URL"
                                                       Foreground="#DADADA"/>
                                            <TextBox x:Name="exportSourceRepoUrlBox"
                                                     MinWidth="260"
                                                     HorizontalAlignment="Stretch"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="0"
                                                    Grid.Column="1"
                                                    Spacing="6"
                                                    Margin="12,0,0,0">
                                            <TextBlock Text="Target Repo URL"
                                                       Foreground="#DADADA"/>
                                            <TextBox x:Name="exportTargetRepoUrlBox"
                                                     MinWidth="260"
                                                     HorizontalAlignment="Stretch"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1"
                                                    Grid.Column="0"
                                                    Spacing="6"
                                                    Margin="0,0,12,0">
                                            <TextBlock Text="Export Source Branch"
                                                       Foreground="#DADADA"/>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <ComboBox x:Name="exportSourceBox"
                                                          Grid.Column="0"
                                                          MinWidth="220"
                                                          HorizontalAlignment="Stretch"/>
                                                <Button x:Name="refreshExportSourceButton"
                                                        Grid.Column="1"
                                                        Margin="12,0,0,0"
                                                        Padding="16,6"
                                                        Content="Refresh"/>
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Grid.Row="1"
                                                    Grid.Column="1"
                                                    Spacing="6"
                                                    Margin="12,0,0,0">
                                            <TextBlock Text="Export Target Branch"
                                                       Foreground="#DADADA"/>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <ComboBox x:Name="exportTargetBox"
                                                          Grid.Column="0"
                                                          MinWidth="220"
                                                          HorizontalAlignment="Stretch"/>
                                                <Button x:Name="refreshExportTargetButton"
                                                        Grid.Column="1"
                                                        Margin="12,0,0,0"
                                                        Padding="16,6"
                                                        Content="Refresh"/>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <Separator Background="#2B2B2B"/>

                                <StackPanel Spacing="12">
                                    <TextBlock Text="Credentials"
                                               FontSize="16"
                                               FontWeight="SemiBold"/>
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="GH_PAT"
                                                   Foreground="#DADADA"/>
                                        <TextBox x:Name="exportPatBox"
                                                 MinWidth="240"
                                                 HorizontalAlignment="Stretch"
                                                 PasswordChar="*"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Spacing="16">
                                    <Button x:Name="checkDiffsButton"
                                            Padding="24,8"
                                            MinWidth="180"
                                            HorizontalAlignment="Right"
                                            Content="Check Diffs"/>

                                    <StackPanel x:Name="submodulePanel"
                                                Margin="0,0,0,8"
                                                Spacing="12"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            Spacing="12">
                                    <Button x:Name="openExportFolderButton"
                                            Padding="24,8"
                                            MinWidth="180"
                                            Content="Open Export Folder"/>
                                    <Button x:Name="deleteExportCacheButton"
                                            Padding="24,8"
                                            MinWidth="220"
                                            Content="Delete Cached Repository"/>
                                    <Button x:Name="runExportButton"
                                            Padding="24,8"
                                            MinWidth="180"
                                            Content="Run Export"
                                            IsEnabled="False"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        <TabItem Header="Local Setup">
            <ScrollViewer>
                <StackPanel Margin="10">
                    <TextBlock Text="Project Path"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="csprojProjectPathBox" Width="400"/>
                        <Button Content="Browse..." Click="OnBrowseProject"/>
                    </StackPanel>
                    <CheckBox x:Name="csprojRunUnityBox" Content="Run Unity" IsChecked="True" Width="300"/>
                    <CheckBox x:Name="csprojMakeCommitsBox" Content="Make commits" IsChecked="True" Width="300"/>
                    <CheckBox x:Name="csprojPushWhenDoneBox" Content="Push when done" IsChecked="True" Width="300"/>
                    <Button x:Name="runCsprojSetupButton" Content="Run CsprojSetup" Width="150"/>
                    <Button x:Name="runFlattenButton" Content="Run Flatten" Width="150"/>
                    <Button x:Name="runCsprojRelinkButton" Content="Run Csproj relink" Width="150"/>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Debug">
            <ScrollViewer>
                <StackPanel Margin="24" Spacing="24">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Message overlay testing"
                                   FontSize="20"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Use the actions below to preview the message overlay with sample data."
                                   Foreground="#BBBBBB"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <Border Padding="24"
                            Background="#1F1F1F"
                            BorderBrush="#323232"
                            BorderThickness="1"
                            CornerRadius="8">
                        <StackPanel Spacing="16">
                            <Button Padding="24,8"
                                    MinWidth="220"
                                    HorizontalAlignment="Left"
                                    Content="Show info message"
                                    Click="OnShowDebugInfoMessage"/>
                            <Button Padding="24,8"
                                    MinWidth="220"
                                    HorizontalAlignment="Left"
                                    Content="Show warning message"
                                    Click="OnShowDebugWarningMessage"/>
                            <Button Padding="24,8"
                                    MinWidth="220"
                                    HorizontalAlignment="Left"
                                    Content="Show error message"
                                    Click="OnShowDebugErrorMessage"/>
                        </StackPanel>
                    </Border>

                    <Border Padding="24"
                            Background="#1F1F1F"
                            BorderBrush="#323232"
                            BorderThickness="1"
                            CornerRadius="8">
                        <StackPanel Spacing="16">
                            <StackPanel Spacing="4">
                                <TextBlock Text="Submodule branch picker preview"
                                           FontSize="20"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Inspect the submodule branch cards loaded in the export tab or review sample data."
                                           Foreground="#BBBBBB"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        Spacing="12">
                                <Button x:Name="showCurrentSubmoduleCardsButton"
                                        Padding="24,8"
                                        MinWidth="220"
                                        Content="Show current diffs"/>
                                <Button x:Name="showSampleSubmoduleCardsButton"
                                        Padding="24,8"
                                        MinWidth="220"
                                        Content="Show sample data"/>
                            </StackPanel>

                            <StackPanel x:Name="debugSubmodulePanel"
                                        Spacing="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
        <GridSplitter Grid.Row="1"
                      Height="6"
                      Margin="24,0"
                      Background="#1F1F1F"
                      ShowsPreview="True"
                      HorizontalAlignment="Stretch"/>
        <Border Grid.Row="2"
                Margin="24"
                Padding="24"
                Background="#141414"
                BorderBrush="#323232"
                BorderThickness="1"
                CornerRadius="8">
            <Grid RowDefinitions="*,Auto,*">
                <Grid Grid.Row="0"
                      RowDefinitions="Auto,*"
                      MinHeight="96">
                    <Grid Grid.Row="0"
                          ColumnDefinitions="Auto,16,*"
                          Margin="0,0,0,12"
                          VerticalAlignment="Center">
                        <TextBlock Text="Activity Log"
                                   FontSize="18"
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="logSummaryText"
                                   Grid.Column="2"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Foreground="#8A8A8A"/>
                    </Grid>
                    <ScrollViewer Grid.Row="1"
                                  x:Name="logScrollViewer"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="logItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,12"
                                            Padding="12"
                                            Background="{Binding BackgroundBrush}"
                                            BorderBrush="{Binding BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8">
                                        <StackPanel Spacing="6">
                                            <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Title}"
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="1"
                                                           Margin="8,0,0,0"
                                                           Text="{Binding TimestampText}"
                                                           Foreground="#7A7A7A"/>
                                                <TextBlock Grid.Column="2"
                                                           Margin="8,0,0,0"
                                                           Text="{Binding DurationDisplay}"
                                                           Foreground="#BBBBBB"/>
                                                <StackPanel Grid.Column="3"
                                                            Margin="8,0,0,0"
                                                            Spacing="6">
                                                    <Button Padding="4"
                                                            Width="28"
                                                            Height="28"
                                                            Background="Transparent"
                                                            BorderBrush="#3A3A3A"
                                                            Click="OnCopyLogEntry"
                                                            ToolTip.Tip="Copy entry to clipboard">
                                                        <Path Width="16"
                                                              Height="16"
                                                              Stretch="Uniform"
                                                              Fill="#E6E6E6"
                                                              Data="M16 1H4C2.9 1 2 1.9 2 3v12h2V3h12V1z M19 5H8C6.9 5 6 5.9 6 7v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/>
                                                    </Button>
                                                    <Button Padding="4"
                                                            Width="28"
                                                            Height="28"
                                                            Background="Transparent"
                                                            BorderBrush="#3A3A3A"
                                                            Click="OnViewLogCallstack"
                                                            ToolTip.Tip="View callstack"
                                                            IsVisible="{Binding HasCallstack}">
                                                        <Path Width="16"
                                                              Height="16"
                                                              Stretch="Uniform"
                                                              Fill="#E6E6E6"
                                                              Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5C21.27 7.61 17 4.5 12 4.5zm0 12c-3.04 0-5.5-2.46-5.5-5.5S8.96 5.5 12 5.5s5.5 2.46 5.5 5.5-2.46 5.5-5.5 5.5zm0-9c-1.93 0-3.5 1.57-3.5 3.5S10.07 15.5 12 15.5 15.5 13.93 15.5 12 13.93 7.5 12 7.5z"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                            <TextBlock Text="{Binding DisplayMessage}"
                                                       TextWrapping="Wrap"
                                                       Foreground="#E6E6E6"/>
                                            <Button Content="{Binding ToggleButtonLabel}"
                                                    Margin="0,4,0,0"
                                                    Padding="8,2"
                                                    HorizontalAlignment="Left"
                                                    Background="Transparent"
                                                    BorderBrush="#3A3A3A"
                                                    IsVisible="{Binding ShowToggleButton}"
                                                    Click="OnToggleLogMessage"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
                <GridSplitter Grid.Row="1"
                              Height="6"
                              Margin="0,12"
                              Background="#1F1F1F"
                              ShowsPreview="True"
                              HorizontalAlignment="Stretch"/>
                <Grid Grid.Row="2"
                      RowDefinitions="Auto,*"
                      MinHeight="72">
                    <TextBlock Grid.Row="0"
                               Text="Execution Summary"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,12"/>
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="summaryItemsControl"
                                      HorizontalAlignment="Stretch">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,10"
                                                Spacing="6"
                                                HorizontalAlignment="Stretch"
                                                ToolTip.ShowDelay="0">
                                        <ToolTip.Tip>
                                            <Border Padding="12"
                                                    Background="#2B2B2B"
                                                    CornerRadius="6">
                                                <TextBlock Text="{Binding FullTitle}"
                                                           FontSize="14"
                                                           TextWrapping="Wrap"
                                                           MaxWidth="400"/>
                                            </Border>
                                        </ToolTip.Tip>
                                        <Grid ColumnDefinitions="*,Auto,Auto">
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Title}"
                                                       FontWeight="SemiBold"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Grid.Column="1"
                                                       Margin="12,0,0,0"
                                                       Text="{Binding DurationDisplay}"
                                                       Foreground="#BBBBBB"/>
                                            <Button Grid.Column="2"
                                                    Margin="12,0,0,0"
                                                    Padding="4"
                                                    Width="28"
                                                    Height="28"
                                                    Background="Transparent"
                                                    BorderBrush="#3A3A3A"
                                                    Click="OnCopySummaryEntry"
                                                    ToolTip.Tip="Copy summary to clipboard">
                                                <Path Width="16"
                                                      Height="16"
                                                      Stretch="Uniform"
                                                      Fill="#E6E6E6"
                                                      Data="M16 1H4C2.9 1 2 1.9 2 3v12h2V3h12V1z M19 5H8C6.9 5 6 5.9 6 7v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z"/>
                                            </Button>
                                        </Grid>
                                        <Border Height="6"
                                                Background="#1F1F1F"
                                                CornerRadius="3"
                                                HorizontalAlignment="Stretch">
                                            <Border Height="6"
                                                    Background="{Binding AccentBrush}"
                                                    CornerRadius="3"
                                                    Width="{Binding GraphWidth}"
                                                    HorizontalAlignment="Left"/>
                                        </Border>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>

        <local:MessageOverlay x:Name="messageOverlay"
                              Grid.RowSpan="3"/>
        <local:CallstackOverlay x:Name="callstackOverlay"
                                 Grid.RowSpan="3"/>
    </Grid>
</Window>
